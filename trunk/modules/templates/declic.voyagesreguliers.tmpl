	<thead>
		<tr>
			<th rowspan="2">Arrêt de départ</th>
			<th rowspan="2">Arrêt d’arrivée</th>
			<th rowspan="2">horaire de départ</th>
			<th rowspan="2">horaire d'arrivée</th>
			<th rowspan="2">Début de période</th>
			<th rowspan="2">Fin de période</th>
			<th rowspan="2">Nombre de personnes</th>
			<th colspan="7">Semaine d'activation</th>
		</tr>
		<tr>
			<th>L</th>
			<th>M</th>
			<th>M</th>
			<th>J</th>
			<th>V</th>
